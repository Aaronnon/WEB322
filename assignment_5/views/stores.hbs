<div class="row box-p">
    <div class="col-md-12 table-responsive">
        <h2 style="font-family: 'Press Start 2P';text-align: center;">Stores<a href="/stores/add" class="btn btn-success pull-right">Add New Store</a> </h2>
        <hr />
        <table class="table">
            <tr>
                <th>Store ID</th>
                <th>Store Name</th>
                <th>Store Phone</th>
                <th>Store Address</th>
            </tr>

            {{#each stores}}
            <tr>
                <td><a href="/store/{{id}}">{{id}}</a></td> 
                <td><a href="/cars?make={{retailer}}">{{retailer}}</a></td>
                <td><a href="tel:{{phone}}">{{phone}}</a></td>
                <td>{{address}}</td>
                <td><a href="/stores/delete/{{id}}" class="btn btn-danger">remove</a></td>

            </tr>
            {{/each}}
        </table>

         {{#unless stores}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/unless}}

    </div>
</div>

