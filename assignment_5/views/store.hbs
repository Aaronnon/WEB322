<div class="row box-p">
    <div class="col-md-12">
        {{!-- {{#each store}} --}}
        <h2 style="font-family: 'Press Start 2P';text-align: center;">{{store.retailer }} - Id: {{ store.id}}</h2>
        <hr />
        <form method="post" action="/store/update">
            <fieldset>
                <legend>Store Information</legend>

                <input type="hidden" name="id" value="{{store.id}}" />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="id" style="display: none;">id</label>
                            <input class="form-control" id="id" name="id" type="text" style="display: none;"
                                value="{{store.id}}" />
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="retailer">Store Retailer:</label>
                            <input class="form-control" id="retailer" name="retailer" type="text"
                                value="{{store.retailer}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="phone">Store Phone:</label>
                            <input class="form-control" id="phone" name="phone" type="tel" value="{{store.phone}}" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="address">Store Address:</label>
                            <input class="form-control" id="address" name="address" type="text"
                                value="{{store.address}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="city">Store City:</label>
                            <input class="form-control" id="city" name="city" type="text" value="{{store.city}}" />
                        </div>
                    </div>

                </div>


            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Store" /><br /><br /><br />
        </form>
    </div>
    {{!-- {{/each}} --}}
</div>