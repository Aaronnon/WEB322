<div class="row">
  <div class="col-md-12">

    <h2 id="move">Add Car</h2>
    <br>
    <form method="post" action="/cars/add" style="margin-top:60px;">
      <fieldset>
        <legend>Car Information</legend>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="make">Car Make:</label>
              <input class="form-control" id="make" name="make" type="text">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="model">Car Model:</label>
              <input class="form-control" id="model" name="model" type="text">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="year">Car Year:</label>
              <input class="form-control" id="year" name="year" type="text">
            </div>
          </div>
        </div>

      </fieldset>

      <fieldset>
        <legend>Vin Information</legend>
        <div class="row">
          <div class="col-md-3">
            <div class="form-group">
              <label for="vin">Car Vin :</label>
              <input class="form-control" id="vin" name="vin" type="text">
            </div>
          </div>
        </div>
      </fieldset>

      <hr>
      <button type="submit" class="btn btn-primary  pull-right">Add Car</button>


    </form>
  </div>
</div>