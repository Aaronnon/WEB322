<div class="row box-p" >
    <div class="col-md-12 table-responsive">
        <h2 style="font-family: 'Press Start 2P';text-align: center;">People</h2>
        <hr />


        <!-- <p>{{first_name}}{{ last_name}}<hr /></p> -->
        <table class="table">
            <tr>
                <th>Person ID</th>
                <th>Full Name</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>Car Vin</th>

            </tr>
            {{#each people}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/person/{{id}}">{{first_name}}&nbsp;{{ last_name}}</a></td>
                <td><a href="tel:{{phone}}">{{phone}}</a></td>
                <td>{{address}}</td>
                <td><a href="/cars?vin={{vin}}">{{vin}}</a></td>
            </tr>
            {{/each}}
        </table>

        {{#unless people}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/unless}}
    </div>
</div>